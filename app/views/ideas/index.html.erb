<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>IdeaBox</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h3>Latest Ideas</h3>
      <div id="latest-ideas">
      </div>
    </div>
